{
  "version": "2.0.0",
  "linux": {
    "command": "sh",
    "args": [
      "-c"
    ]
  },
  "osx": {
    "command": "sh",
    "args": [
      "-c"
    ]
  },
  "windows": {
    "command": "cmd",
    "args": [
      "/C"
    ]
  },
  "tasks": [
    {
      "label": "Dotnet Restore",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "restore"
      ]
    },
    {
      "label": "Dotnet Restore Force",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "restore",
        "--no-cache"
      ]
    },
    {
      "label": "Dotnet clean (debug)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "clean",
        "--configuration",
        "Debug"
      ]
    },
    {
      "label": "Dotnet clean (release)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "clean",
        "--configuration",
        "Release"
      ]
    },
    {
      "label": "Web App: Dotnet Build Debug",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceRoot}/src/StatCan.OrchardCore.Cms.Web",
        "-c",
        "Debug"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Web App: Dotnet Rebuild Debug",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceRoot}/src/StatCan.OrchardCore.Cms.Web",
        "--no-incremental",
        "-c",
        "Debug"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Web App: Dotnet Build Release",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceRoot}/src/StatCan.OrchardCore.Cms.Web",
        "-c",
        "Release"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Web App: Dotnet Run",
      "args": [
        "cd ${workspaceRoot}/src/StatCan.OrchardCore.Cms.Web & dotnet run"
      ]
    },
    {
      "label": "Cleanup build folder",
      "type": "shell",
      "command": "rm",
      "windows": {
        "command": "Remove-Item",
        "args": [
          "${workspaceRoot}\\.build\\release\\*",
          "-recurse"
        ]
      },
      "args": [
        "-rfv",
        "${workspaceRoot}/.build/release/*"
      ]
    },
    {
      "label": "Dotnet Publish (self-contained)",
      "type": "shell",
      "command": "dotnet",
      "windows": {
        "command": "dotnet",
        "args": [
          "publish",
          "${workspaceRoot}\\src\\StatCan.OrchardCore.Cms.Web",
          "--configuration",
          "release",
          "--runtime",
          "win-x64",
          "--self-contained",
          "--output",
          ".\\.build\\release"
        ]
      },
      "args": [
        "publish",
        "${workspaceRoot}/src/StatCan.OrchardCore.Cms.Web",
        "--configuration",
        "release",
        "--runtime",
        "linux-x64",
        "--self-contained",
        "--output",
        "./.build/release"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Dotnet Publish (framework dependent)",
      "type": "shell",
      "command": "dotnet",
      "windows": {
        "command": "dotnet",
        "args": [
          "publish",
          "${workspaceRoot}\\src\\StatCan.OrchardCore.Cms.Web",
          "--configuration",
          "release",
          "--runtime",
          "win-x64",
          "--self-contained",
          "false",
          "--output",
          ".\\.build\\release"
        ]
      },
      "args": [
        "publish",
        "${workspaceRoot}/src/StatCan.OrchardCore.Cms.Web",
        "--configuration",
        "release",
        "--runtime",
        "linux-x64",
        "--self-contained",
        "false",
        "--output",
        "./.build/release"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Web App: Dotnet Publish (self-contained)",
      "dependsOn": [
        "Cleanup build folder",
        "Dotnet Publish (self-contained)"
      ]
    },
    {
      "label": "Web App: Dotnet Publish (framework dependent)",
      "dependsOn": [
        "Cleanup build folder",
        "Dotnet Publish (framework dependent)"
      ]
    },
    {
      "label": "Gulp Build",
      "args": [
        "gulp build"
      ],
      "problemMatcher": "$gulp-tsc"
    }
  ]
}
