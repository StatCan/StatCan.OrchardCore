      "LoginSettings": {
        "UseSiteTheme": true
      },
      "RegistrationSettings": {
        "UseSiteTheme": true
      },
      "LocalizationSettings": {
        "DefaultCulture": "en",
        "SupportedCultures": ["fr", "en"]
