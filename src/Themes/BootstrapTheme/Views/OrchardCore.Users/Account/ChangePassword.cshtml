@model OrchardCore.Users.ViewModels.ChangePasswordViewModel

@{ 
    ViewLayout = "Layout__Login";
}

<h1>@T["Change password"]</h1>
<form asp-controller="Account" asp-action="ChangePassword" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CurrentPassword" class="asterix control-label">@T["Current password"]</label>
        <input asp-for="CurrentPassword" class="form-control" aria-describedby="CurrentPassword-described-by" />
        <span id="CurrentPassword-described-by" asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="asterix control-label">@T["New password"]</label>
        <input asp-for="Password" class="form-control" aria-describedby="Password-described-by" />
        <div id="passwordStrength"></div>
        <span id="Password-described-by" asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirmation" class="asterix control-label">@T["New password confirmation"]</label>
        <input asp-for="PasswordConfirmation" class="form-control"  aria-describedby="PasswordConfirmation-described-by" />
        <span id="PasswordConfirmation-described-by" asp-validation-for="PasswordConfirmation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">@T["Change password"]</button>
    </div>
</form>