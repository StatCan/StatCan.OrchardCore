<footer id="footer-section">
  <div class="d-block d-sm-flex flex-wrap justify-content-between align-items-start align-items-lg-center">
    {% assign menu = "alias:" | append: Model.ContentItem.Content.Footer.MenuAlias.Text %}
    {% shape "menu", alias: menu %}
    {%comment%}
      The PageModified http context can be set by any piece of content rendered before the footer.
      Last one to set it wins, if it is set multiple times.
    {%endcomment%}
    <div class="d-flex flex-wrap">
    {% if HttpContext.Items["PageModified"] != blank%}
      <p class="mb-0 mr-4 text-right">{{ "Last modified on" | t }} {{ HttpContext.Items["PageModified"] | local | date: "%b %d, %Y" }}</p>
    {% endif %}
    {{Model.Content.Footer-IllustrationBy | shape_render}}
    </div>
  </div>
  <div class="fip-footer mono-dark fip justify-content-end mt-5">
    {{ "SymbolCanada" | shape_new | shape_render }}
  </div>
</footer>
