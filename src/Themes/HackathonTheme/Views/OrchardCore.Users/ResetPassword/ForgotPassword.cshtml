@model OrchardCore.Users.ViewModels.ForgotPasswordViewModel

@{ 
    ThemeLayout.Metadata.Alternates.Add("Layout__Login");
}
@* TODO *@
<h1 class="login">@T["Forgot password"]</h1>
<div class="login">
  <section class="col-xl-5 col-lg-6 col-md-8 col-12">
    <form asp-controller="ResetPassword" asp-action="ForgotPassword" method="post">
      <div class="form-group d-flex flex-column align-items-center justify-content-center">
        <label asp-for="UserIdentifier" class="control-label">@T["Enter your email or username to reset password."]</label>
        <input asp-for="UserIdentifier" class="form-control" aria-describedby="UserIdentifier-described-by" />
        <span id="UserIdentifier-described-by" asp-validation-for="UserIdentifier" class="text-danger"></span>
      </div>
      <div class="form-group d-flex flex-column align-items-center justify-content-center mb-3">
        <p class="text-center">@T["A recovery link will be sent to the email address tied to your account."]</p>
      </div>
      @await RenderSectionAsync("AfterForgotPassword", required: false)
      <div class="form-group d-flex justify-content-center">
        <button type="submit" class="btn btn-lg btn-primary is-rounded">@T["Send recovery email"]</button>
      </div>
    </form>
  </section>
</div>
