@{ 
    ThemeLayout.Metadata.Alternates.Add("Layout__Login");
}

<h1 class="login">@T["Password recovery sent"]</h1>
<div class="login">
  <section class="col-xl-5 col-lg-6 col-md-8 col-12">
    <div class="mb-5">
      <h2 class="text-center">@T["Check your email"]</h2>
      <p class="text-secondary text-center mb-0">@T["It may take a few minutes"]</p>
    </div>
    <div class="form-group d-flex flex-column align-items-center justify-content-center mb-3">
      <p class="text-center">@T["A recovery email has been sent to the email address tied to your account."]</p>
    </div>
  </section>
</div>
