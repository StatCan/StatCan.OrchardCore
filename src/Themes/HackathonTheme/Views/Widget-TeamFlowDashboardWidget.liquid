{%comment%}Widget that displays it's content when the user is part of a team{%endcomment%}
{% assign team = Model.Participant.Content.Hacker.Team.ContentItemIds | content_item_id | first %}

<div {%if Model.Id != null%}id="{{ Model.Id }}"{%endif%} class="{{ Model.Classes | join: ' ' }}">
    <div class="vg-header">
        <h2>{{ Model.ContentItem | display_text }}</h2>
    </div>
    <div class="vg-content" >
      {% if team == null %}
      {{ Model.Content.TeamFlowDashboardWidget__NoTeamHtml | shape_render }}
      {% else %}
       {{ Model.Content.AdvancedFlowPart | clone_properties: Model | shape_render }}
       {% endif %}
    </div>
</div>
