{% if Model.HasItems %}
  <v-list-group {% if Model.ContentItem.Content.CommonMenuItemPart.Icon != null %}prepend-icon="{{Model.ContentItem.CommonMenuItemPart.Icon}}"{% endif %}>
    <template v-slot:activator>
      <v-list-item-title>{{ Model.ContentItem.DisplayText }}</v-list-item-title>
    </template>
    {% for item in Model.Items %}
      {{ item | shape_render }}
    {% endfor %}
  </v-list-group>
{% else %}
  <v-list-item>
    <v-list-item-icon>
      <v-icon>{{Model.ContentItem.Content.CommonMenuItemPart.Icon}}</v-icon>
    </v-list-item-icon>
    <v-list-item-content>
      {% shape_clear_alternates Model %}
      {% shape_type Model "MenuItemLink" %}
      {{ Model | shape_render }}
    </v-list-item-content>
  </v-list-item>
{% endif %}