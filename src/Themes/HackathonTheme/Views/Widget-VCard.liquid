<v-card>
  {% if Model.ContentItem.Content.VCard.Title.Text %}
    <v-card-title>{{ Model.ContentItem.Content.VCard.Title.Text }}</v-card-title>
  {% endif %}
  {% if Model.ContentItem.Content.VCard.Subtitle.Text %}
    <v-card-subtitle>{{ Model.ContentItem.Content.VCard.Subtitle.Text }}</v-card-subtitle>
  {% endif %}
  {% if Model.ContentItem.Content.VCard.Content.Html %}
    <v-card-text>
      {{ Model.ContentItem.Content.VCard.Content.Html | sanitize_html | shortcode | raw }}
    </v-card-text>
  {% endif %}
  {% if Model.ContentItem.Content.Actions %}
    <v-card-actions>
      {% assign contentItems = Model.ContentItem.Content.Actions.ContentItems %}
      {% for contentItem in contentItems %}
        <v-btn href="{{ contentItem.LinkMenuItemPart.Url }}"> 
          {% if contentItem.LinkMenuItem.IconName.Text %}
            <v-icon>{{ contentItem.LinkMenuItem.IconName.Text }}</v-icon> 
          {% endif %}
          {{ contentItem.LinkMenuItemPart.Name }}
        </v-btn>
      {% endfor %}
    </v-card-actions>
  {% endif %}
</v-card>
