{% assign color = Model.ContentItem.Content.VTimelineItem.Color.Text %}
{% assign icon = Model.ContentItem.Content.VTimelineItem.Icon.Text %}
{% assign iconColor = Model.ContentItem.Content.VTimelineItem.IconColor.Text %}
{% assign color = Model.ContentItem.Content.VTimelineItem.Color.Text %}

<v-timeline-item {{ Model.ContentItem.Content.VTimeline.Props.Values | join: ' ' | raw }}
  {% if empty != color %}color="{{ color }}"{% endif %}
  {% if empty != icon %}icon="{{ icon }}"{% endif %}
  {% if empty != iconColor %}icon-color="{{ iconColor }}"{% endif %}>
  {{ Model.Content.FlowPart | shape_render }}
</v-timeline-item>
