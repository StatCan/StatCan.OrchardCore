{%comment%}Only visible for users that can view this menuitem {%endcomment%}
{% if Model.ContentItem | user_can_view %}
  {% if Model.HasItems %}
    <v-list-group {% if Model.ContentItem.Content.AuthContentMenuItem.IconName.Text != null %}prepend-icon="{{Model.ContentItem.Content.ContentMenuItem.IconName.Text}}"{% endif %}>
      <template v-slot:activator>
        <v-list-item-content>
          <v-list-item-title>{{ Model.ContentItem.DisplayText }}</v-list-item-title>
        </v-list-item-content>
      </template>
      {% for item in Model.Items %}
        {{ item | shape_render }}
      {% endfor %}
    </v-list-group>
  {% else %}
    <v-list-item href="{{ Model.ContentItem.Content.AuthContentMenuItem.SelectedContentItem.ContentItemIds.first | display_url }}">
      <v-list-item-icon>
        <v-icon>{{Model.ContentItem.Content.AuthContentMenuItem.IconName.Text}}</v-icon>
      </v-list-item-icon>
      <v-list-item-content>
        <v-list-item-title>{{ Model.ContentItem.DisplayText }}</v-list-item-title>
      </v-list-item-content>
    </v-list-item>
  {% endif %}
{% endif %}

