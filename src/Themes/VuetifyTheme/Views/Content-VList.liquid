{% assign color = Model.ContentItem.Content.VList.Color.Text %}
{% assign elevation = Model.ContentItem.Content.VList.Elevation.Text %}
{% assign height = Model.ContentItem.Content.VList.Height.Text %}
{% assign rounded = Model.ContentItem.Content.VList.Rounded.Text %}
{% assign tag = Model.ContentItem.Content.VList.Tag.Text %}
{% assign width = Model.ContentItem.Content.VList.Width.Text %}

<v-list {{ Model.ContentItem.Content.VList.Props.Values | join: ' ' | raw }}
  {% if blank != color %}color="{{ color }}"{% endif %}
  {% if blank != elevation %}elevation="{{ elevation }}"{% endif %}
  {% if blank != height %}height="{{ height }}"{% endif %}
  {% if blank != rounded %}rounded="{{ rounded }}"{% endif %}
  {% if blank != tag %}tag="{{ tag }}"{% endif %}
  {% if blank != width %}width="{{ width }}"{% endif %}
  >
  {% for item in Model.Content.ListPart.ContentItems %}
      {{ item | shape_build_display | shape_render }}
      <v-divider inset></v-divider>
  {% endfor %}
</v-list>
