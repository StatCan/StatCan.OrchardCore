{% assign alignSelf = Model.ContentItem.Content.VCol.AlignSelf.Text %}

{% assign colsXs = Model.ContentItem.Content.VCol.Cols.Text %}
{% assign colsSm = Model.ContentItem.Content.VCol.ColsSm.Text %}
{% assign colsMd = Model.ContentItem.Content.VCol.ColsMd.Text %}
{% assign colsLg = Model.ContentItem.Content.VCol.ColsLg.Text %}
{% assign colsXl = Model.ContentItem.Content.VCol.ColsXl.Text %}

{% assign offsetXs = Model.ContentItem.Content.VCol.Offset.Text %}
{% assign offsetSm = Model.ContentItem.Content.VCol.OffsetSm.Text %}
{% assign offsetMd = Model.ContentItem.Content.VCol.OffsetMd.Text %}
{% assign offsetLg = Model.ContentItem.Content.VCol.OffsetLg.Text %}
{% assign offsetXl = Model.ContentItem.Content.VCol.OffsetXl.Text %}

<v-col 
  {% if empty != alignSelf %}align-self="{{ alignSelf }}"{% endif %}
  {% if empty != colsXs %}cols="{{ colsXs }}"{% endif %}
  {% if empty != colsSm %}sm="{{ colsSm }}"{% endif %}
  {% if empty != colsMd %}md="{{ colsMd }}"{% endif %}
  {% if empty != colsLg %}lg="{{ colsLg }}"{% endif %}
  {% if empty != colsXl %}xl="{{ colsXl }}"{% endif %}
  {% if empty != offsetXs %}offset="{{ offsetXs }}"{% endif %}
  {% if empty != offsetSm %}offset-sm="{{ offsetSm }}"{% endif %}
  {% if empty != offsetMd %}offset-md="{{ offsetMd }}"{% endif %}
  {% if empty != offsetLg %}offset-lg="{{ offsetLg }}"{% endif %}
  {% if empty != offsetXl %}offset-xl="{{ offsetXl }}"{% endif %}
  {% if empty != orderXs %}order="{{ orderXs }}"{% endif %}
  {% if empty != orderSm %}order-sm="{{ orderSm }}"{% endif %}
  {% if empty != orderMd %}order-md="{{ orderMd }}"{% endif %}
  {% if empty != orderLg %}order-lg="{{ orderLg }}"{% endif %}
  {% if empty != orderXl %}order-xl="{{ orderXl }}"{% endif %}>
  {{ Model.Content.FlowPart | shape_render }}
</v-col>
