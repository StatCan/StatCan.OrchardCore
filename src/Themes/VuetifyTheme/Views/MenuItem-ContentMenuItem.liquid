{% if Model.HasItems %}
  <v-list-group {% if Model.ContentItem.Content.ContentMenuItem.IconName.Text != null %}prepend-icon="{{Model.ContentItem.Content.ContentMenuItem.IconName.Text}}"{% endif %}>
    <template v-slot:activator>
      <v-list-item-content>
        <v-list-item-title>{{ Model.ContentItem.Content.ContentMenuItemPart.Name }}</v-list-item-title>
      </v-list-item-content>
    </template>
    {% for item in Model.Items %}
      {{ item | shape_render }}
    {% endfor %}
  </v-list-group>
{% else %}
  <v-list-item href="{{ Model.ContentItem.Content.ContentMenuItemPart.SelectedContentItem.ContentItemIds.first | display_url }}">
    <v-list-item-icon>
      <v-icon>{{Model.ContentItem.Content.ContentMenuItem.IconName.Text}}</v-icon>
    </v-list-item-icon>
    <v-list-item-content>
      <v-list-item-title>{{ Model.ContentItem.Content.ContentMenuItemPart.Name }}</v-list-item-title>
    </v-list-item-content>
  </v-list-item>
{% endif %}