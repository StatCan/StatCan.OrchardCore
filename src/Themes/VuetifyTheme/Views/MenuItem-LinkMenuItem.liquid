{% if Model.HasItems %}
  <v-list-group {% if Model.ContentItem.Content.LinkMenuItem.IconName.Text != nil %}prepend-icon="{{Model.ContentItem.Content.LinkMenuItem.IconName.Text}}"{% endif %}>
    <template v-slot:activator>
      <v-list-item-content>
        <v-list-item-title>{{ Model.ContentItem.Content.LinkMenuItemPart.Name }}</v-list-item-title>
      </v-list-item-content>
    </template>
    {% for item in Model.Items %}
      {{ item | shape_render }}
    {% endfor %}
  </v-list-group>
{% else %}
  <v-list-item href="{{ '~' | append: Model.ContentItem.Content.LinkMenuItemPart.Url | raw | liquid | href }}" input-value="" >
    {% if Model.ContentItem.Content.LinkMenuItem.IconName.Text != nil %}
    <v-list-item-icon>
      <v-icon>{{ Model.ContentItem.Content.LinkMenuItem.IconName.Text }}</v-icon>
    </v-list-item-icon>
    {% endif %}
    <v-list-item-content>
      <v-list-item-title>{{ Model.ContentItem.Content.LinkMenuItemPart.Name }}</v-list-item-title>
    </v-list-item-content>
  </v-list-item>
{% endif %}
