        {% shape "menu", alias: "alias:footer-navigation" %}
      </div>
      <div class="col-md-4 col-12 d-flex align-items-end">
        <div aria-label="{{ 'Digital Innovation logo' | t }}" class="d-flex align-items-center">
          {{ "DigitalInnovationLogo" | shape_new | shape_render }}
