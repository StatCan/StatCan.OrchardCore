<section id="{{ Model.ContentItem.DisplayText | slugify }}" class="widget-section d-flex align-items-center {{ Model.ContentItem.Content.Section.Style.Text }}">
  <div class="{{ Model.ContentItem.Content.Section.Section.Text | default: 'd-none' }}">
    <h2 class="{{ Model.ContentItem.Content.Section.TitleLayout.Text }}">{{ Model.ContentItem.DisplayText }}</h2>
    <div class="row {{ Model.ContentItem.Content.Section.ColumnLayout.Text }} {{ Model.ContentItem.Content.Section.JustifyContent.Text }}">
      {% for item in Model.ContentItem.Content.FlowPart.Widgets %}
        {{ item | shape_build_display | shape_render }}
      {% endfor %}
    </div>
  </div>
  {% if Model.ContentItem.Content.Section.TopDivider.Text %}
    {{ "Dividers" | shape_new | shape_properties: divider: Model.ContentItem.Content.Section.TopDivider.Text, pos: 'top', mirror: 'mirrorY' | shape_render }}
  {% endif %}
  {% if Model.ContentItem.Content.Section.BottomDivider.Text %}
    {{ "Dividers" | shape_new | shape_properties: divider: Model.ContentItem.Content.Section.BottomDivider.Text, pos: 'bottom', mirror: 'mirrorY' | shape_render }}
  {% endif %}
</section>
