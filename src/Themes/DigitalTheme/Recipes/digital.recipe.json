        "DigitalAdmin",
        "DigitalTheme",
        "SafeMode"
      ],
      "disable": []
    },
    {
      "name": "Settings",
      "TimeZoneId": "America/Toronto",
      "AppendVersion": true,
      "AdminSettings": {
        "DisplayMenuFilter": true
      },
      "LocalizationSettings": {
        "DefaultCulture": "en",
        "SupportedCultures": ["fr", "en"]
      },
      "LoginSettings": {
        "UseSiteTheme": true
      },
      "ResetPasswordSettings": {
        "UseSiteTheme": true
      },
      "RegistrationSettings": {
        "UseSiteTheme": true
      },
      "LayerSettings": {
        "Zones": ["Header", "Footer"]
      }
    },
    {
      "name": "themes",
      "admin": "DigitalAdmin",
      "site": "DigitalTheme"
    },
    {
      "name": "Layers",
      "Layers": [
        {
          "Name": "Everywhere",
          "Rule": "true",
          "Description": "Widgets on this layer are displayed everywhere."
        },
        {
          "Name": "French",
          "Rule": "culture(\"fr\")",
          "Description": "French culture"
        },
        {
          "Name": "English",
