@using OrchardCore.Workflows.Helpers
@model StatCan.OrchardCore.VueForms.Workflows.VueFormSubmittedEventViewModel

<header>
  <h4><i class="fa fa-bolt"></i>@Model.Activity.GetTitleOrDefault(() => T["Vue Form submitted"])</h4>
</header>
<em>
  @if (Model.ExecuteForAllForms == true)
  {
    <text>@T["All Forms"]</text> }
  else
  { 
    @(Model.AllItems.Any() ? (object)string.Join(", ", Model.AllItems.Where(i=>i.Selected == true).Select(x => x.Text)): "")
  }
</em>
