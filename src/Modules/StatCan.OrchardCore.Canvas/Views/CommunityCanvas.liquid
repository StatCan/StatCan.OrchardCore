{% assign data = Model.Data %}
{% assign json = Model.Json %}
{% assign colour = Model.Colour %}

<div class="flex flex-col px-3 ">
    <div class= "font-semibold text-gray-700">Description: {{json.canvas.type}}</div>
    <div class="text-gray-700">Author: {{json.canvas.author}} </div>
