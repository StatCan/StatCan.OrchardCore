{% assign owner = Model.ContentItem.Owner | users_by_id %}
{% capture failUrl %}~{{ Request.Path }}{% endcapture %}

<tr class="table-row">
  <td class="name-col">
    <a href="{{ Model.ContentItem | display_url }}">{{ Model.ContentItem | display_text }}</a>
  </td>
  <td class="table-col">
    {{ Model.ContentItem.ModifiedUtc | local | date: "%b %d, %Y" }}
  </td>
  <td class="table-col">{{ owner.Properties.UserProfile.UserProfile.FirstName.Text }} {{ owner.Properties.UserProfile.UserProfile.LastName.Text }}</td>
  <td class="table-col">
    {% if Model.ContentItem.Published %}
      {{ "Published" | t }}
    {% else %}
    {{ "Draft" | t }}
    {% endif %}
  </td>
  <td class="table-col">
    {{ Model.ContentItem.CreatedUtc | local | date: "%b %d, %Y" }}
  </td>
  <td class="table-col">{{ "OptionsButton" | shape_new: ContentItem: Model.ContentItem, Relative: false, DisplayMode: "Summary", SuccessUrl: "~/projects", FailUrl: failUrl | shape_render}}</td>
</tr>