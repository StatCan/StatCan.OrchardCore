{% assign menuItem = Model.Properties.Model %}
{% assign isExternal =  menuItem.Content.LinkMenuItemPart.Url contains "http" %}
{% if isExternal == false %}
  {% assign menuUrl = "~/" | append: menuItem.Content.LinkMenuItemPart.Url | href %}
{% else %}
{% assign menuUrl = menuItem.Content.LinkMenuItemPart.Url | href %}
{% endif %}

<v-list-item href="{{ menuUrl }}">
  <v-list-item-icon>
    <v-icon color="black">{{ menuItem.Content.CommonMenuItemPart.IconName.Text }}</v-icon>
  </v-list-item-icon>
  <v-list-item-content>
    <v-list-item-title>
      <span class="font-weight-bold">
          {{ menuItem.Content.LinkMenuItemPart.Name }}
      </span>
    </v-list-item-title>
  </v-list-item-content>
</v-list-item>
