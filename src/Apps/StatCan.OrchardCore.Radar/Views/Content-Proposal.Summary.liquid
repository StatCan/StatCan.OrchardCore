<tr class="table-row">
  <td class="name-col">
    <a href="{{ Model.ContentItem | display_url }}">{{ Model.ContentItem | display_text }}</a>
  </td>
  <td class="table-col">
    {{ Model.ContentItem.CreatedUtc | local | date: "%b %d, %Y" }}
  </td>
  <td class="table-col">
    {% if Model.ContentItem.Published %}
      {{ "Published" | t }}
    {% else %}
      {{ "Draft" | t }}
    {% endif %}
  </td>
  <td class="table-col">{{ "OptionsButton" | shape_new: ContentItem: Model.ContentItem, Relative: false, DisplayMode: "Summary" | shape_render}}</td>
</tr>
