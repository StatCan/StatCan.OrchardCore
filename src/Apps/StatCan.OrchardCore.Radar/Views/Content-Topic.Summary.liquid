{% assign canView = Model.ContentItem | user_can_view %}
{% if canView %}

{% style src:"~/StatCan.OrchardCore.Radar/css/topic.min.css", debug_src:"~/StatCan.OrchardCore.Radar/css/topic.css" %}

<a href="{{ Model.ContentItem | display_url }}">
  <div class="topic">
    <v-icon color="white" class="topic-tag-icon">
      mdi-pound
    </v-icon>
    <div class="label">
      {{ Model.ContentItem | display_text }}
    </div>
  </div>
</a>
{% else %}
  {{ "NotFound" | shape_new | shape_render }}
{% endif %}
