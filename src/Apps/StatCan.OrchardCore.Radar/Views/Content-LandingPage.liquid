            </v-col>
        </v-row>
        <v-row>
            <v-col md="6">
                <v-card elevation=0>
                    <v-card-title class="card-title" style="padding: 0;">
                        <div class="card-title ml-5 mt-5 mb-8">
                            <v-icon color="white" class="mr-5" style="font-size: 65px;">
                                mdi-calendar
                            </v-icon>
                            <div class="white--text">
                                {{ Model.ContentItem.Content.LandingPage.Activity3.Html | raw }}
                            </div>
                        </div>
                        <div class="zigzag-container">
                            <div class="zigzag zigzag-light"></div>
                        </div>
                    </v-card-title>
                    <div class="card-background-light">
                        
                    </div>
                </v-card>
            </v-col>
            <v-col>
                <v-card elevation=0>
                    <v-card-title class="card-title" style="padding: 0;">
                        <div class="card-title ml-5 mt-5 mb-8">
                            <v-icon color="white" class="mr-5" style="font-size: 65px;">
                                mdi-alert-circle-outline
                            </v-icon>
                            <div class="white--text">
                                {{ Model.ContentItem.Content.LandingPage.Activity4.Html | raw }}
