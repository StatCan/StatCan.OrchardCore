{% style src:"~/StatCan.OrchardCore.Radar/css/landing-page.css" %}

{% zone "Header" %}
{% assign imagePath = Model.ContentItem.Content.LandingPage.HeaderImage.Paths.first %}
<div>
    <div class="rippleFront" style="background-image: url('{{ "~/StatCan.OrchardCore.Radar/images/ripples-white.svg" | href }}')">
        <div class="header-text">
            <v-container style="max-width: 1200px">
                <v-row>
                    <v-col md="12">
                        <div class="name light-font text-center">
                            {{ Model.ContentItem | display_text }}
                        </div>
                    </v-col>
                </v-row>
                <v-row>
                    <v-col md="12">
                        <div class="description light-font text-center pr-10 pl-10">
                            {{ Model.ContentItem.Content.LandingPage.Description.Text }}
                        </div>
                    </v-col>
                </v-row>
                <v-row>
                    <v-col md="12">
                        <div class="list">
                            {{ Model.ContentItem.Content.LandingPage.Headerlist.Html | raw }}
                        </div>
                    </v-col>
                </v-row>
                <v-row>
                    <v-col md="12">
                        <div class="header-footer mt-7">
                            <v-img
                                src="{{ "~/StatCan.OrchardCore.Radar/images/goc.svg" | href }}"
                                max-width="293"
                                max-height="28"
                            ></v-img>
                            <v-img
                                src="{{ "~/StatCan.OrchardCore.Radar/images/canada.svg" | href }}"
                                max-width="172"
                                max-height="41"
                            ></v-img>
                        </div>
                    </v-col>
                </v-row>
            </v-container>
        </div>
    </div>
    <div class="zigzag-container">
        <div class="zigzag zigzag-white"></div>
    </div>
</div>
{% endzone %}

<div class="mb-12">
    <v-container style="max-width: 1200px">
        <v-row>
            <v-col md="12">
                <div class="text-h4 text-center section-title">
                    {{ "Recent activities" | t }}
                </div>
            </v-col>
        </v-row>
        <v-row>
            {% for activity in Model.ContentItem.Content.Activities.ContentItems %}
                <v-col md="6">
                    <div class="card">
                        <div class="card-title">
                            <div class="card-title-caption ml-5 mt-5 mb-8">
                                <v-icon color="white" class="mr-5" style="font-size: 65px;">
                                    {{ activity.Activity.Icon.Text }}
                                </v-icon>
                                <div class="white--text">
                                    {{ activity.HtmlBodyPart.Html | raw }}
                                </div>
                            </div>
                            <div class="zigzag-container">
                                <div class="zigzag zigzag-light"></div>
                            </div>
                        </div>
                        {{ activity.LiquidPart.Liquid | liquid }}
                    </div>
                </v-col>
            {% endfor %}
        </v-row>
    </v-container>
</div>

<div class="section-background pb-12 mb-12">
    <v-container style="max-width: 1200px">
        <v-row>
            <v-col md="12">
                <div class="text-h4 text-center section-title">
                    {{ "Recent trends" | t }}
                </div>
            </v-col>
        </v-row>
        <v-row>
            {% for trend in Model.ContentItem.Content.Trends.ContentItems %}
                <v-col md="6">
                    <v-card elevation=0>
                        <v-card-title class="card-title" style="padding: 0;">
                            <div class="card-title ml-5 mt-5 mb-8">
                                <v-icon color="white" class="mr-5" style="font-size: 65px;">
                                    {{ trend.Trend.Icon.Text }}
                                </v-icon>
                                <div class="white--text">
                                    {{ trend.HtmlBodyPart.Html | raw }}
                                </div>
                            </div>
                            <div class="zigzag-container">
                                <div class="zigzag zigzag-dark"></div>
                            </div>
                        </v-card-title>
                        <div class="card-background-dark">
                            
                        </div>
                    </v-card>
                </v-col>
            {% endfor %}
        </v-row>
    </v-container>
</div>

<div class="mb-12">
    <v-container style="max-width: 1200px">
        <v-row justify="space-around">
            {% for footerCard in Model.ContentItem.Content.Footer.ContentItems %}
                <v-col md="4">
                    <v-card elevation=0 to="#">
                        <div class="white--text text-center front-footer pb-6 pt-7">
                            <v-icon color="white" class="mb-5" style="font-size: 120px;">
                                {{ footerCard.LandingPageFooterCard.Icon.Text }}
                            </v-icon>
                            <div>
                                {{ footerCard.HtmlBodyPart.Html | raw }}
                            </div>
                        </div>
                    </v-card>
                </v-col>
            {% endfor %}
        </v-row>
    </v-container>
</div>