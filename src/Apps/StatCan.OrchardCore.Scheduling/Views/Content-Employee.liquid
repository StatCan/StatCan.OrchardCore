{% block "script", type: "text/html", At: "Foot", id: "Employee" %}
<v-container>
  <v-row>
    <v-col>
      <div class="text-h2">{{ Model.ContentItem.Content.Employee.FirstName.Text }} {{ Model.ContentItem.Content.Employee.LastName.Text }}</div> 
      <div class="text-h4">{{Model.ContentItem.Content.Employee.Cohort | taxonomy_terms | first}}
        {{Model.ContentItem.Content.Employee.Location | taxonomy_terms | first}}</div>
      <div>
        <v-checkbox
          disabled
          hide-details
          v-model="participating" 
          label="Participating"
        ></v-checkbox>
        <v-checkbox
          disabled
          hide-details
          v-model="consent" 
          label=" {{ "Consent" | t }}"
        ></v-checkbox>
      </div>
    </v-col>
  </v-row>
</v-container>
{% endblock %}
<employee></employee>
{% block "script", At: "Foot", depends_on: "vuejs" %}
  Vue.component("employee", {
      template:  "#Employee",
      data: () => ({
      consent: {{ Model.ContentItem.Content.Employee.Consent.Value }},
		  participating: {{ Model.ContentItem.Content.Employee.Participating.Value }},
	  })
  });
{% endblock %}
